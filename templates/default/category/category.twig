{% set bodyClass = 'category' %}
{% set projects = craft.entries
.relatedTo(category)
.orderBy('postDate desc')
.all() %}

{% set seoTitle = category.title %}

{% if category.seoDescription | length %}
{% set seoDescription = category.seoDescription %}
{% endif %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}

<!-- Projects -->
{% set projectCount = projects|length %}
<div class="padding-bottom-2">

<div class="grid-x grid-padding-x grid-padding-y {% if projectCount > 2 %}align-center{% else %}align-center{% endif %}">
  {% for project in projects %}
{#     <div class="small-12 medium-12 {% if projectCount > 2 %}xlarge-6{% else %}xlarge-6{% endif %} xxlarge-4 cell padding-bottom-0"> #}
    <div class="small-12 medium-8 {% if projectCount > 2 %}xlarge-8{% else %}xlarge-8{% endif %} xxlarge-8 cell">
    {% include "_includes/blocks/excerpt" %}
    </div>
  {% endfor %}
</div>
</div>
<!-- End Projects -->
{% endblock %}


{% block footer %}
{% endblock %}